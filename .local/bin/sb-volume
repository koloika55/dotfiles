#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -w -f "$TERMINAL" -e alsamixer; pkill -RTMIN+10 "${STATUSBAR:-dwmblocks}" ;;
	2) amixer -q set Master toggle; kill -39 $(pidof dwmblocks);;
	4) amixer -q set Master 5%+ unmute; kill -39 $(pidof dwmblocks);;
	5) amixer -q set Master 5%- unmute; kill -39 $(pidof dwmblocks);;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

vol="$(amixer sget Master | awk -F'[][]' '/dB/ { print $2 }' | tr -d %)"

# If muted, print ðŸ”‡ and exit.
#[ "$vol" != "${vol%\[MUTED\]}" ] && echo ðŸ”‡ && exit
if
        [ $(amixer sget Master | awk -F'[][]' '/dB/ { print $6  }') = off ]
then
	echo ðŸ”‡ && exit
fi

# vol="${vol#Volume: }"

# split() {
# 	# For ommiting the . without calling and external program.
# 	IFS=$2
# 	set -- $1
# 	printf '%s' "$@"
# }

# vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
	$((vol >= 70)) ) icon="ðŸ”Š" ;;
	$((vol >= 30)) ) icon="ðŸ”‰" ;;
	$((vol >= 1)) ) icon="ðŸ”ˆ" ;;
	* ) echo ðŸ”‡ && exit ;;
esac

echo "$icon $vol%"
